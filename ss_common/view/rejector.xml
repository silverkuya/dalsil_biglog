<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--#########################################################################################################-->
        <record model="ir.ui.view" id="ss_common.view_rejector_wiz">
            <field name="name">ss.rejector.form</field>
            <field name="model">ss.rejector</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <form string="ss.rejector.wiz">
                    <field name="description" readonly="1"/>
                    <group>
                        <field required="1" name="reason"/>
                    </group>
                    <footer>
                        <button type="object" name="do_continue" string="Continue" class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--#########################################################################################################-->
    </data>
</odoo>
